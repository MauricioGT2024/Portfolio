---
const skills = {
  "Frontend": [
    { name: "HTML5", level: 90 },
    { name: "CSS3/SASS", level: 85 },
    { name: "JavaScript", level: 90 },
    { name: "React", level: 85 },
    { name: "Tailwind", level: 67 },
  ],
  "Backend": [
    { name: "Node.js", level: 45 },
    { name: "Python", level: 25 },
    { name: "MongoDB", level: 54 },
  ],
  "Herramientas": [
    { name: "Git", level: 90 }
  ],
};
---
<section id="skills" class="py-20 bg-gray-800">
  <h2 class="text-4xl font-bold text-center mb-12" data-aos="fade-up">
    <span class="bg-gradient-to-r from-blue-500 to-purple-500 bg-clip-text text-transparent">
    Mis  Habilidades
    </span>
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    {Object.entries(skills).map(([category, categorySkills], categoryIndex) => (
      <div 
      data-aos="fade-up"
      data-aos-delay={categoryIndex * 100}
      class="bg-gray-700 rounded-lg p-6 space-y-6"
      >
        <h3 class="text-2xl font-bold text-white mb-4">{category}</h3>

        <div class="space-y-4">
          {categorySkills.map((skill) => (
            <div>
              <div class="flex justify-between mb-1">
                <span class="text-gray-300">{skill.name}</span>
                <span class="text-gray-400">{skill.level}</span>
              </div>
              <div class="w-full bg-gray-600 rounded-full h-2">
                <div 
                  class="bg-blue-500 h-2 rounded-full transition-all duration-1000"
                  style={`width: ${skill.level}%`}
                  ></div>
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>
